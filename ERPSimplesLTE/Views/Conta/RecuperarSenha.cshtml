@model ERPSimplesLTE.Models.Usuario

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Lembrar senha</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="../adminlte/plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="../adminlte/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="../adminlte/css/adminlte.min.css">

</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="card card-outline card-primary">
            <div class="card-header text-center">
                <a href="#" class="h1"><b>Admin</b>LTE</a>
            </div>
            <div class="card-body">
                <p class="login-box-msg">Você esqueceu sua senha ? Aqui você pode facilmente recuperar uma nova senha.</p>
                <form name="frmpadrao" action="~/Conta/RecuperarSenha" method="post">
                    <div class="input-group mb-3">
                        <input type="email" class="form-control" placeholder="Digite seu email" name="email" id="email">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <button type="submit"  id="btnCriarSenha" name="btnCriarSenha" class="btn btn-primary btn-block">Criar nova senha</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>
                <p class="mt-3 mb-1">
                    <a href="@Url.Action("Login", "Conta")" class="nav-link active">Login</a>
                </p>
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>

    <!-- jQuery -->
    <script src="../adminlte/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="../adminlte/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="../adminlte/js/adminlte.min.js"></script>

    <script type="text/javascript">

        debugger

        $('#btnCriarSenha').click(function () {
            debugger

            $.ajax({
                type: "POST",
                url: '@Url.Content("~/Conta/EmailNaoCadastrado")',
                data: { email: $('#email').val() },
                dataType: 'json',
                async: false,
                success: function (data) {
                    debugger
                    console.log(data);
                }
            });

        });

    </script>

</body>
</html>
